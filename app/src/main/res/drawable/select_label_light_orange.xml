                <gradient android:angle="270" android:endColor="@color/ic_light_orange"
                    android:startColor="@color/ic_light_orange"/>
                <size android:height="60dp" android:width="320dp" /> 
                 <corners android:radius="2dp" /> 
            </shape> 
        </item> 
        <item> 
            <shape> 
                <gradient android:angle="270" android:endColor="@color/ic_light_orange_pr"
                    android:startColor="@color/ic_light_orange_pr"/>
